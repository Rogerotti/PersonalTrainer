@model  Framework.Models.UserDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    Layout = "Layout";
}

<style>
    button.ui.test2 {
        background: #e9fffe
    }

</style>

<body>
    <form class="ui form inverted blue segment"  asp-controller="Login" asp-action="Login" method="post">

        <div class="ui three column grid">

            <div class="column centered row">
                <!--Login column-->
                <div class="column">
                    <div class="field">
                        <label>@Framework.Resources.UserLanguage.Login</label>
                        <input placeholder="@Framework.Resources.UserLanguage.Login" type="text" asp-for="Login">
                        <span asp-validation-for="Login" class="ui red header"></span>
                    </div>
                </div>
            </div>

            <div class="column centered row">
                <!--Password column-->
                <div class="column">
                    <div class="field">
                        <label>@Framework.Resources.UserLanguage.Password</label>
                        <div class="ui left icon input">
                            <input placeholder="@Framework.Resources.UserLanguage.Password" type="password" asp-for="Password">
                            <i class="lock icon"></i>
                        </div>
                        <span asp-validation-for="Password" class="ui red header"></span>
                    </div>
                </div>
            </div>

            <!--Login Button-->
            <div class="column  centered row">
                <button class="ui test2 button"  type="submit"> @Framework.Resources.UserLanguage.Login</button>
            </div>

        </div>
    </form>

</body>


