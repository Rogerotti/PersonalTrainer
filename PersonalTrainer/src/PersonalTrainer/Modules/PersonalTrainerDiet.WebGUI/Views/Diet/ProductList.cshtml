@model  IEnumerable<Framework.Models.ProductDto>
@using System.Text.RegularExpressions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Baza produktów";
    Layout = "DietLayout";
}

<body>
    <table class="ui sortable celled table">
        <thead>
            <tr>
                <th class="sorted ascending">Product Name</th>
                <th class="sorted ascending">Product Manufacturer</th>
                <th>Calories</th>
                <th>Carbohydrates</th>
                <th>Fat</th>
                <th>Protein</th>
                <th>Fibre</th>
                <th>Type</th>
                <th colspan="2">Operations</th>
            </tr>
        </thead>
        <tbody asp-for="">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Manufacturer</td>
                    <td>@item.Macro.Calories</td>
                    <td>@item.Macro.Carbohydrates</td>
                    <td>@item.Macro.Fat</td>
                    <td>@item.Macro.Protein</td>
                    <td>@item.Macro.Fibre</td>
                    <td>@item.Type</td>
                    <td>
                            <form asp-controller="Diet" asp-action="EditProduct" method="post">
                                <input type="hidden" name="productId" value="@item.ProductId"/>
                                <button class="ui blue button" type="submit">Edit</button>
                            </form>
              
                    </td>
                    <td>
                        <form asp-controller="Diet" asp-action="DeleteProduct" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button class="ui blue button" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
   </table>
</body>