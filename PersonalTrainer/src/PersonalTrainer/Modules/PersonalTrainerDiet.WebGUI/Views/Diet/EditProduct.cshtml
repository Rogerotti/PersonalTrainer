@model  Framework.Models.ProductDto
@using System.Text.RegularExpressions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "test";
    Layout = "DietLayout";
}

<body>
    <form class="ui form segment" asp-controller="Diet" asp-action="EditProduct2" method="post">

        <div class="ui grid">

            <div class="three column row">

                <div class="column">
                    <div class="field">
                        <label>Product name</label>
                        <input placeholder="Name" type="text" asp-for="Name">
                        <span asp-validation-for="Name" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label>Product Manufature</label>
                        <input placeholder="Manufacturer" type="text" asp-for="Manufacturer">
                        <span asp-validation-for="Manufacturer" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label>Type</label>
                        <div class="ui selection dropdown" asp-for="Type">
                            <input name="Type" type="hidden">
                            <div class="default text">Type</div>
                            <div class="menu">
                                @foreach (var item in @Html.GetEnumSelectList(typeof(Framework.Models.ProductType)))
                                {
                                    <div class="item" data-value="@item.Value">@item.Text</div>
                                }
                            </div>
                        </div>
                        <span asp-validation-for="Type" class="ui red header"></span>
                    </div>
                </div>

            </div>

            <div class="two column row">

                <div class="column">
                    <div class="field">
                        <label>Protein</label>
                        <input placeholder="Protein" type="text" asp-for="Macro.Protein">
                        <span asp-validation-for="Macro.Protein" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label>Fat</label>
                        <input placeholder="Fat" type="text" asp-for="Macro.Fat">
                        <span asp-validation-for="Macro.Fat" class="ui red header"></span>
                    </div>
                </div>

            </div>

            <div class="two column row">

                <div class="column">
                    <div class="field">
                        <label>Carbohydrates</label>
                        <input placeholder="Carbohydrates" type="text" asp-for="Macro.Carbohydrates">
                        <span asp-validation-for="Macro.Carbohydrates" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label>
                            Fibre
                        </label>
                        <input placeholder="Fibre" type="text" asp-for="Macro.Fibre">
                        <span asp-validation-for="Macro.Fibre" class="ui red header"></span>
                    </div>
                </div>

            </div>

            <div class="three column row">

                <div class="column">
                    <div class="field">
                        <label> Calories</label>
                        <input placeholder="Calories" type="text" asp-for="Macro.Calories">
                        <span asp-validation-for="Macro.Calories" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label>Quantity Type</label>
                        <div class="ui selection dropdown" asp-for="Macro.QuantityType">
                            <input name="Macro.QuantityType">

                            <i class="dropdown icon"></i>
                            <div class="default text">Choose quantity type</div>
                            <div class="menu">
                                @foreach (var item in @Html.GetEnumSelectList(typeof(Framework.Models.QuantityType)))
                                {
                                    <div class="item" data-value="@item.Value">@item.Text</div>
                                }
                            </div>
                        </div>
                        <span asp-validation-for="Macro.QuantityType" class="ui red header"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="field">
                        <label> Quantity</label>
                        <input placeholder="Quantity" type="text" asp-for="Macro.Quantity">
                        <span asp-validation-for="Macro.Quantity" class="ui red header"></span>
                    </div>
                </div>

            </div>

            <div class="column centered">
                <button class="ui blue button" type="submit">
                    Edit
                </button>
            </div>


        </div>

        <input  type="hidden" asp-for="ProductId">
        <input type="hidden" asp-for="UserId">
    </form>

</body>